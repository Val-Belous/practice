{{#each hits}}

  <li class='list-item'>

    <img src='{{track.share.image}}' alt='{{track.share.text}}' width='300' />
    <figcaption>Listen to the {{track.share.subject}}</figcaption> 
    {{#each track.hub.actions}}
      {{#if uri}}
          <figure class="player">
            
            <audio class="audio" controls src='{{uri}}'>
              Your browser does not support the
              <code>audio</code>
              element.
            </audio>
          </figure>
          <a href='{{uri}}'></a>
          <button class="btn" type='submit'>Download</button></a>{{/if}}
    {{/each}}
  </li>
{{/each}}